
<% include ../partials/header %>


<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Jazz Closet</p>
            <div class="list-group">
                <li class="list-group-item active"> Info 1</li>
                <li class="list-group-item"> Info 2</li>
                <li class="list-group-item"> Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= record.image %>" alt="">
                <div class="caption-full">
                    <h4 class="pull-right">Django</h4>
                    <h4><a href=""><%=record.name%></a></h1>
                    <p><%= record.description %></p>
                    <p> <em>Submitted by <%= record.author.username %></em></p>
        
        <% if ( currentUser && record.author.id.equals(currentUser._id)){ %>
             <a class="btn btn-warning"href="/records/<%=record._id%>/edit">Edit</a>
            <form id="delete-form" action="/records/<%=record._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete </button>
            </form>
        <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/records/<%=record._id%>/comments/new">Add new comment</a>
                </div>
                <hr>
                <% record.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong> <%= comment.author.username %></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%= comment.text %>
                        </p>
                        <a class="btn btn-xs btn-warning" href="/records/<%=record._id%>/comments/<%=comment._id%>/edit">Edit</a>
                        <form id="delete-form" action="/records/<%=record._id%>/comments/<%=comment._id%>?_method=DELETE" method = "POST">
                            <input type="submit" class= "btn btn-xs btn-danger" value="Delete">
                        </form>
                    </div>
                </div>
               
                <% })  %>
            </div>
        </div>
    </div>
</div>



<% include ../partials/footer %>